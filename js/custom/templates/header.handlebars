        </ul>
      </li>
    </ul>-->

    <!-- Left Nav Section -->
    <ul class="left">
      {{#forEach mainMenu key="item"}}
        <li id="nav-{{item.id}}"
            {{#ifCond activePage item.id}}
                class="active"
            {{/ifCond}}
        ><a href="{{item.url}}">{{item.name}}</a></li>
      {{/forEach}}
    </ul>
    </section>
</nav>