<nav class="top-bar" data-topbar>
    <ul class="title-area">
      <li class="name">
				<h1><span class="light upper">Edward</span> <span class="heavy upper">Hinkle</span></h1>
			</li>
			<li class="toggle-topbar menu-icon"><a href="#">Menu</a></li>
		</ul>

    <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">
			{{#forEach rightMenu key="item"}}
        <li id="nav-{{item.id}}"
            {{#if item.children}}
                class="has-dropdown"
            {{/if}}
        ><a href="{{item.url}}">{{item.name}}</a>
            {{#if item.children}}
                <ul class="dropdown">
                    {{#forEach item.children key="childItem"}}
                        <li id="nav-{{childItem.id}}"><a href="{{childItem.url}}">{{childItem.name}}</a></li>
                    {{/forEach}}
                </ul>
            {{/if}}
      </li>
      {{/forEach}}
    </ul>
      
